<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    <TextView
        android:id="@+id/textView_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_ip_message"
        android:textAlignment="center"
        android:layout_above="@+id/textInput_ip"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">
        <EditText
            android:id="@+id/editText_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="10.17.2.199"
            android:hint="IP"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/button_setup_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/setup_ip_button"/>
</RelativeLayout>