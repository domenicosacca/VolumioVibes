<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ImageView
            android:id="@+id/track_current_image"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView
            android:id="@+id/track_current_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/track_current_image"
            android:text="Titolo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/track_current_image" />
        <TextView
            android:id="@+id/track_current_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/track_current_image"
            android:layout_below="@+id/track_current_name"
            android:text="artista"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/track_current_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/track_current_image"
            android:layout_below="@+id/track_current_artist"
            android:text="sorgente"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_below="@+id/track_current_name"
            android:src="@drawable/ic_favorite_border_black_24dp"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/event_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_current">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>