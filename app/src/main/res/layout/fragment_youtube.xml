<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    <TextView
        android:id="@+id/textView_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_yt_audio_playlist_message"
        android:textAlignment="center"
        android:layout_above="@+id/textInput_ip"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">
        <EditText
            android:id="@+id/editText_yt_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="6pt"
            android:text="https://www.youtube.com/watch?v=Tm8LGxTLtQk"
            android:hint="Youtube URL"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/button_yt_song_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="?actionBarSize"
        android:text="@string/add_yt_audio_button"/>
</RelativeLayout>